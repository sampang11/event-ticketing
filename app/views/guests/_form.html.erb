<%= form_with(model: participant, local: true) do |form| %>
  <% if participant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(participant.errors.count, "error") %> prohibited this participant from being saved:</h2>

      <ul>
        <% participant.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :full_name, class: 'label' %>
    <div class="control">
      <%= form.text_field :full_name, class: 'input', placeholder: 'Your Full Name', required: true %>
    </div>
  </div>

  <div class="field">
    <%= form.label :email, class: 'label' %>
    <div class="control">
      <%= form.text_field :email, class: 'input', placeholder: 'example@gmail.com', required: true %>
    </div>
  </div>

  <div class="field">
    <%= form.label :phone_no, class: 'label' %>
    <div class="control">
      <%= form.text_field :phone_no, class: 'input', placeholder: 'Your Phone Number' %>
    </div>
  </div>

  <div class="field">
    <%= form.label :address, class: 'label' %>
    <div class="control">
      <%= form.text_field :address, class: 'input', placeholder: 'Present Address' %>
    </div>
  </div>

  <div class="field">
    <%= form.label :e_transfer_number, class: 'label' %>
    <div class="control">
      <%= form.text_field :e_transfer_number, class: 'input', placeholder: 'E-Transfer Ref Number', required: true %>
    </div>
  </div>

  <div class="field">
    <%= form.label :adult_ticket, class: 'label' %>
    <div class="control">
      <%= form.number_field :adult_ticket, max: 10, class: 'input', placeholder: 'Total number of adult ticket' %>
    </div>
  </div>

  <div class="field">
    <%= form.label :children_ticket, class: 'label' %>
    <div class="control">
      <%= form.number_field :children_ticket, max: 10, class: 'input', placeholder: 'Total number of children ticket' %>
    </div>
  </div>

  <br/>
  <div class="actions">
    <%= form.submit 'Register', class: "button is-success", style: "width: 100%" %>
  </div>
  <br/><br/>
<% end %>
